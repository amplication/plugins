{
  "extends": "../../tsconfig.base.json",
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@events/*": ["src/events/*"],
      "@utils/*": ["src/utils/*"],
      "@static/*": ["src/static/*"],
      "@root/*": ["./*"],
      "@/*": ["src/*"],
      "*": ["*"]
    }
  },
  "exclude": [
    "node_modules",
    "src/static",
    "src/templates"
  ]
}
